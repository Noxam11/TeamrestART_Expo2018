    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/MoveErrorSeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="48dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MovePercentStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Percent Start"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/MovePercentStartDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:text="100%"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
             />

    </LinearLayout>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/MovePercentStartSeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="56dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MoveCounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Reps per level"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/MoveCountsDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:text="100 reps"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
             />

    </LinearLayout>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/MoveCountsSeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="56dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MoveLevels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Level Count"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/MoveLevelsDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:text="50 levels"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
             />

    </LinearLayout>

    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/MoveLevelsSeekbar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="56dp"
        rsb:dsb_indicatorColor="#69BE28"
        rsb:dsb_progressColor="#69BE28"
        rsb:dsb_rippleColor="#69BE28"
        rsb:dsb_thumbSize="24dp"
        rsb:dsb_trackHeight="4dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>